package com.maddy.springbootkafkadec2019.kafkaproducer;

import java.time.LocalDate;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.CommandLineRunner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.scheduling.annotation.EnableScheduling;

import com.maddy.springbootkafkadec2019.kafkaproducer.entity.Employee;
import com.maddy.springbootkafkadec2019.kafkaproducer.producer.EmployeeJsonProducer;

@SpringBootApplication
//@EnableScheduling
public class KafkaproducerApplication implements CommandLineRunner{
	
	@Autowired
	private EmployeeJsonProducer employeeJsonProducer;

	public static void main(String[] args) {
		SpringApplication.run(KafkaproducerApplication.class, args);
	}

	@Override
	public void run(String... args) throws Exception {
		for(int i = 0; i < 5; i++) {
			Employee employee = new Employee("emp-"+i, "employee"+i, LocalDate.now());
			employeeJsonProducer.sendEmployeeJson(employee);
		}
		
	}

}
